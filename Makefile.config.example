# set to yes to keep debugging information in native library or to prof to
# profile (with gprof) your program
#
# DEBUG = {no|yes|prof}
DEBUG = yes

# set to yes if you have the Buddy BDD library or to know if you do not have the
# library or do not want to use it
# BUDDY = {yes|no}
BUDDY = no

# Comment the following line if you do not have recode on your system
# (otherwise, some name and other characters in the documentation will not
# appear the right way)
RECODE = -pp "recode UTF-8..Latin-1 <"

# directory where the documentation will be put
DOCDIR = doc/api

PERL = perl
ECHO = /bin/echo

FLAGS = -w Ae -annot -g

ifeq ($(DEBUG),yes)
OPT_FLAGS = -g
else
ifeq ($(DEBUG),prof)
OPT_FLAGS = -p -noassert -ccopt -O3
else
OPT_FLAGS = -g -noassert -ccopt -O3
endif
endif

OCAMLC = ocamlfind ocamlc $(FLAGS)
OCAMLOPT = ocamlfind ocamlopt $(OPT_FLAGS)
OCAMLDOC = ocamlfind ocamldoc
OCAMLDEP = ocamlfind ocamldep
OCAMLMKTOP = ocamlfind ocamlmktop
INSTALL = ocamlfind install

ifeq ($(BUDDY),yes)
INCLUDE = -package javalib,buddy
else
INCLUDE = -package javalib
endif

PP = -package camlp4 -syntax camlp4o
